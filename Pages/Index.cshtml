@page
@model IndexModel
@{
    ViewData["Title"] = "Image Gallery";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary mb-3">Image Gallery</h1>
    </div>

    <div class="card shadow-lg mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Upload New Image</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id="uploadForm">
                <div class="mb-3">
                    <label for="imageFile" class="form-label fw-bold">Select Image</label>
                    <input type="file" class="form-control" id="imageFile" name="ImageFile"
                           accept=".jpg,.jpeg,.png,.gif" required>
                    <div class="form-text">
                        Supported formats: JPEG, PNG, GIF | Max size: 10MB
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">
                    Upload Image
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Uploaded Images</h5>
        </div>
        <div class="card-body">
            @if (Model.Images != null && Model.Images.Any())
            {
            <div class="row g-4" id="imageGallery">
                @foreach (var image in Model.Images)
                    {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm image-card">
                        <div class="image-container position-relative">
                            <img src="@image.FilePath" class="card-img-top" alt="@image.FileName"
                                 loading="lazy" style="height: 200px; object-fit: cover;">
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@image.FileName">
                                @image.FileName
                            </h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @image.UploadDate.ToString("dd.MM.yyyy HH:mm")
                                </small>
                                <small class="text-muted">
                                    @((image.FileSize / 1024f / 1024f).ToString("0.00")) MB
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                    }
            </div>
            }
            else
            {
            <div class="text-center py-5">
                <h4 class="text-muted">No images uploaded yet</h4>
                <p class="text-muted">Start by uploading your first image using the form above.</p>
            </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalImageTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="" style="max-height: 70vh;">
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
    }

    .card-header {
        background: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #e0e0e0;
        font-weight: 600;
    }

    .card-body {
        padding: 20px;
    }

    .image-card {
        transition: transform 0.2s ease;
        cursor: pointer;
    }

        .image-card:hover {
            transform: scale(1.02);
        }

        .image-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background: #f5f5f5;
        }

    .btn-primary {
        background: #007bff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        cursor: pointer;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .form-control {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    .row {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .text-center {
        text-align: center;
    }

    .text-muted {
        color: #6c757d;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageCards = document.querySelectorAll('.image-card');
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            const modalImage = document.getElementById('modalImage');
            const modalTitle = document.getElementById('modalImageTitle');

            imageCards.forEach(card => {
                card.addEventListener('click', function () {
                    const img = this.querySelector('img');
                    modalImage.src = img.src;
                    modalTitle.textContent = img.alt;
                    modal.show();
                });
            });

            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                showAlert(successMessage, 'success');
            }

            function showAlert(message, type) {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(alertDiv);

                setTimeout(() => {
                    alertDiv.remove();
                }, 5000);
            }
        });
    </script>
}