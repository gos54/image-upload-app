@page
@model IndexModel
@{
    ViewData["Title"] = "Image Gallery";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary mb-3">Image Gallery</h1>
        <p class="lead text-muted">Upload and manage your images easily</p>
    </div>

    <div class="card shadow-lg mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-cloud-upload-alt me-2"></i>Upload New Image</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id="uploadForm">
                <div class="mb-3">
                    <label for="imageFile" class="form-label fw-bold">Select Image</label>
                    <input type="file" class="form-control" id="imageFile" name="ImageFile"
                           accept=".jpg,.jpeg,.png,.gif" required>
                    <div class="form-text">
                        <i class="fas fa-info-circle me-1"></i>
                        Supported formats: JPEG, PNG, GIF | Max size: 10MB
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-upload me-2"></i>Upload Image
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-images me-2"></i>Uploaded Images</h5>
        </div>
        <div class="card-body">
            @if (Model.Images != null && Model.Images.Any())
            {
            <div class="row g-4" id="imageGallery">
                @foreach (var image in Model.Images)
                    {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm image-card">
                        <div class="image-container position-relative">
                            <img src="@image.FilePath" class="card-img-top" alt="@image.FileName"
                                 loading="lazy" style="height: 200px; object-fit: cover;">
                            <div class="image-overlay"></div>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@image.FileName">
                                @image.FileName
                            </h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    @image.UploadDate.ToString("dd.MM.yyyy HH:mm")
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-hdd me-1"></i>
                                    @((image.FileSize / 1024f / 1024f).ToString("0.00")) MB
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                    }
            </div>
            }
            else
            {
            <div class="text-center py-5">
                <i class="fas fa-images fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No images uploaded yet</h4>
                <p class="text-muted">Start by uploading your first image using the form above.</p>
            </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalImageTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="" style="max-height: 70vh;">
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .image-card {
        cursor: pointer;
        overflow: hidden;
    }

    .image-container {
        overflow: hidden;
    }

    .image-card img {
        transition: transform 0.3s ease;
    }

    .image-card:hover img {
        transform: scale(1.05);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 70%, rgba(0,0,0,0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .image-card:hover .image-overlay {
        opacity: 1;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 25px;
        padding: 10px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        font-weight: 600;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageCards = document.querySelectorAll('.image-card');
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            const modalImage = document.getElementById('modalImage');
            const modalTitle = document.getElementById('modalImageTitle');

            imageCards.forEach(card => {
                card.addEventListener('click', function() {
                    const img = this.querySelector('img');
                    modalImage.src = img.src;
                    modalTitle.textContent = img.alt;
                    modal.show();
                });
            });

            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                showAlert(successMessage, 'success');
            }

            function showAlert(message, type) {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(alertDiv);

                setTimeout(() => {
                    alertDiv.remove();
                }, 5000);
            }
        });
    </script>
}